<div class="container py-4">
  <div class="page-header">
    <h1 class="page-header__title">Estudantes</h1>

    <div class="page-header__actions">
      <a href="<%= new_panel_student_path %>" class="btn btn-accent">Novo estudante</a>
    </div>
  </div>

  <% if @students.empty? %>
    <div class="text-center">
      <h3 class="text-muted">Nenhum estudante cadastrado</h3>
    </div>
  <% end %>

  <div class="row px-4 py-2">
    <div class="col-6">
      <b class="text-muted">Nome</b>
    </div>

    <div class="col-4">
      <b class="text-muted">E-mail</b>
    </div>

    <div class="col-2 text-right">
      <b class="text-muted">Ações</b>
    </div>
  </div>

  <% @students.each do |student| %>
    <div class="card mb-1">
      <div class="card-body">
        <div class="row align-items-center">
          <div class="col m-0">
            <a href="<%= edit_panel_student_path(student) %>">
              <b><%= student.name %></b>
            </a>
          </div>

          <div class="col-4">
            <%= student.email %>
          </div>

          <div class="col-2 text-right">
            <%= button_to panel_student_path(student), method: :delete, class: 'btn btn-transparent btn-sm btn-confirm mr-2', title: 'Deletar', data: { confirm: 'Você tem certeza que deseja deletar este estudante?' } do %>
              <i class="fas fa-times"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
