<div class="container py-5">
  <div class="page-header">
    <h1 class="page-header__title">Novo estudante</h1>

    <div class="page-header__actions">
      <a href="<%= panel_students_path %>" class="btn btn-light">Cancelar</a>
    </div>
  </div>

  <%= form_for [:panel, @new_student], url: panel_students_path  do |f| %>
    <div class="row">
      <div class="col-6">
        <div class="form-group">
          <label for="" class="required">Nome</label>
          <%= f.text_field :name, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <label for="" class="required">E-mail</label>
          <%= f.email_field :email, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <label for="" class="required">Senha</label>
          <%= f.password_field :password, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <button class="btn btn-primary">
            Adicionar estudante
          </button>
        </div>
      </div>
    </div>
  <% end %>
</div>
