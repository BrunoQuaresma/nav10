<div class="row">
  <div class="col-md-6">
    <%= form_for [:panel, exam]  do |f| %>
      <div class="form-group">
        <label for="" class="required">Título</label>
        <%= f.text_field :title, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <label for="" class="required">Duração</label>
        <%= f.number_field :duration_in_minutes, class: 'form-control', required: true %>
        <small class="form-text text-muted">
          Tempo em minutos
        </small>
      </div>

      <% if exam.new_record? %>
        <div class="form-group">
          <label for="" class="required">Número de questões</label>
          <%= f.number_field :number_of_questions, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <label for="" class="required">Quantidade de opções</label>
          <%= f.number_field :number_of_options, class: 'form-control', required: true, value: 5 %>
        </div>
      <% end %>


      <div class="form-group">
        <label for="" class="required">Questões começam em</label>
        <%= f.number_field :start_question_number, class: 'form-control', required: true, value: exam.start_question_number || 1 %>
      </div>

      <div class="form-group text-right">
        <button class="btn btn-primary">
          Salvar
        </button>
      </div>
    <% end %>
  </div>
</div>
