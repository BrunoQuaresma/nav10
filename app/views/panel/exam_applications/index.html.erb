<div class="container py-4">
  <div class="page-header">
    <% if current_user.teacher? %>
      <h1 class="page-header__title">Aplicação de simulado</h1>

      <div class="page-header__actions">
        <a href="<%= new_panel_exam_application_path %>" class="btn btn-accent">Nova aplicação</a>
      </div>
    <% else %>
      <h1 class="page-header__title">Simulados</h1>
    <% end %>
  </div>

  <% if @exam_applications.empty? %>
    <div class="text-center">
      <h3 class="text-muted">Nenhuma aplicação cadastrada</h3>
    </div>
  <% end %>

  <div class="row px-4 py-2">
    <div class="col-8 col-md-3">
      <b class="text-muted">Aplicação</b>
    </div>

    <div class="col-md-3">
      <b class="text-muted">Simulado</b>
    </div>

    <div class="col-md-2">
      <b class="text-muted">Turma</b>
    </div>

    <div class="col-md-2">
      <b class="text-muted">Aplicado em</b>
    </div>

    <div class="col-md-2 text-right">
      <b class="text-muted">Ações</b>
    </div>
  </div>

  <% @exam_applications.each do |exam_application| %>
    <div class="card mb-1 card-hover">
      <div class="card-body">
        <div class="row align-items-center">
          <div class="col-8 col-md-3 m-0">
            <% if current_user.teacher? %>
              <a href="<%= panel_exam_application_path(exam_application) %>">
                <b>Aplicação <%= exam_application.id %></b>
              </a>
            <% elsif(!current_user.answered?(exam_application)) %>
              <a href="<%= panel_exam_application_start_path(exam_application) %>">
                <%= exam_application.exam.title %>
              </a>
            <% else %>
              <div><%= exam_application.exam.title %></div>
              <small>Respondido</small>
            <% end %>
          </div>

          <% if current_user.teacher? %>
            <div class="col-md-3 ellipsis">
              <%= exam_application.exam.title %>
            </div>
          <% elsif(current_user.answered?(exam_application)) %>
            <div class="col">
              <%= current_user.correctness_percentage(exam_application) %>%
            </div>
          <% end %>

          <div class="col-md-2 d-none d-md-block">
            <%= exam_application.group.name %>
          </div>

          <% if current_user.teacher? %>
            <div class="col-md-2">
              <%= exam_application.created_at.strftime("%d/%m/%Y") %>
            </div>
          <% end %>

          <div class="col-md-2 text-right d-flex justify-content-end">
            <% if current_user.teacher? %>
              <a title="Editar" href="<%= edit_panel_exam_application_path(exam_application) %>" class="btn btn-sm btn-transparent">
                <i class="fas fa-pencil-alt"></i>
              </a>

              <%= button_to panel_exam_application_path(exam_application), method: :delete, class: 'btn btn-transparent btn-sm btn-confirm mr-2', title: 'Deletar', data: { confirm: 'Você tem certeza que deseja deletar esta aplicação?' } do %>
                <i class="fas fa-times"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
