<div class="container py-4">
  <div class="page-header">
    <h1 class="page-header__title">Aplicações</h1>

    <div class="page-header__actions">
      <a href="<%= new_panel_exam_application_path %>" class="btn btn-primary">Nova aplicação</a>
    </div>
  </div>

  <% if @exam_applications.empty? %>
    <div class="text-center">
      <h3 class="text-muted">Nenhuma aplicação cadastrada</h3>
    </div>
  <% end %>

  <% @exam_applications.each do |exam_application| %>
    <div class="card mb-1">
      <div class="card-body">
        <div class="row align-items-center">
          <div class="col h5 m-0">
            <a href="<%= panel_exam_application_path(exam_application) %>">
              Aplicação <%= exam_application.id %>
            </a>
          </div>

          <div class="col">
            <div>Simulado</div>
            <div><b><%= exam_application.exam.title %></b></div>
          </div>

          <div class="col">
            <div>Turma</div>
            <div><b><%= exam_application.group.name %></b></div>
          </div>

          <div class="col">
            <div>Aplicado em</div>
            <div><b><%= exam_application.created_at %></b></div>
          </div>

          <div class="col-auto ml-auto d-flex">
            <%= button_to "Excluir", panel_exam_application_path(exam_application), method: :delete, class: 'btn btn-sm btn-confirm mr-2', data: { confirm: 'Você tem certeza que deseja deletar esta aplicação?' } %>
            <a href="<%= edit_panel_exam_application_path(exam_application) %>" class="btn btn-sm btn-primary">Editar</a>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
